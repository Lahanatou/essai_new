<%= form_with(model: orphan, local: true) do |form| %>
  <% if orphan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(orphan.errors.count, "error") %> prohibited this orphan from being saved:</h2>

      <ul>
        <% orphan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <h3><%= form.label :image %></h3>
    <%= image_tag(@orphan.image.url) if @orphan.image && @orphan.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= form.label :sex %>
    <%= form.text_field :sex %>
  </div>
  <div class="field">
    <%= form.label :Information_sur_son_origine %>
    <%= form.select :originalparent_id, Originalparent.all.collect { |p| [p.name, p.id]}, class: "search_label form-control", prompt: "sélectionne le parent d'origine ici" %>

    <strong>Ou</strong>
    <td><%= link_to "Créer Informations de sa famille d'origine ICI", new_originalparent_path %></td>

  </div>


  <div class="field">
    <%= form.label :Information_sur_sa_destination %>
    <%= form.select :hostparent_id, Hostparent.all.collect { |p| [p.name, p.id]}, class: "search_label form-control", prompt: "sélectionne le parent d'accueil ici" %>

    <strong>Ou</strong>
    <td><%= link_to "Créer Informations de sa famille d'accueil ICI", new_hostparent_path %></td>

  </div>

  <div class="actions">
    <% if action_name=='new' %>

      <%= form.submit 'noveau orphan',class:'btn btn-primary' %> ||
      <%= link_to 'Retour', orphans_path,class:'btn btn-primary' %>

      <% else %>
      <%= form.submit 'Modifier',class:'btn btn-primary' %>
      <% end %>
  </div>
<% end %>
